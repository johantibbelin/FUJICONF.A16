' ************************************
' * Fujinet Config (Atari 16 bit)    *
' *----------------------------------*
' * MIDI and ACSI funcionality       *
' * ---------------------------------*
'
'
' **----------------------------------
' * Config
'
debug!=TRUE
use_acsi!=FALSE
use_midi!=TRUE
use_vt52!=FALSE
'
CLS
init
vt52_test
END
PROCEDURE init
  vt52_init
  IF use_acsi!
    init_acsi
  ELSE IF use_midi!
    init_midi
  ENDIF
RETURN
PROCEDURE init_midi
  PRINT AT(1,24);"Midi init started...";
RETURN
PROCEDURE init_acsi
  PRINT AT(1,22);"ACSI init started..."
RETURN
PROCEDURE test_screen
  PRINT AT(1,1);"Fujinet"
  ' servers
  PRINT AT(2,4);"SD"
  PRINT AT(2,5);"fujinet.irata.online"
  PRINT AT(1,12);"----------------------------------------"
  FOR slot&=1 TO 8
    PRINT AT(2,13+slot&);slot&;":"
  NEXT slot&
  PRINT AT(1,22);"----------------------------------------"
RETURN
PROCEDURE vt52_init
  ' ** VT52 codes
  DIM vt52_num$(16)
  vt52_num$(0)="0"
  vt52_num$(1)="1"
  vt52_num$(2)="2"
  vt52_num$(3)="3"
  vt52_num$(4)="4"
  vt52_num$(5)="5"
  vt52_num$(6)="6"
  vt52_num$(7)="7"
  vt52_num$(8)="8"
  vt52_num$(9)="9"
  vt52_num$(10)="A"
  vt52_num$(11)="B"
  vt52_num$(12)="C"
  vt52_num$(13)="D"
  vt52_num$(14)="E"
  vt52_num$(15)="F"
  esc$=CHR$(27)
  vt52_cup$=esc$+"A"
  vt52_cdwn$=esc$+"B"
  vt52_crgt$=esc$+"C"
  vt52_clft$=esc$+"D"
  vt52_cls$=esc$+"E"
  vt52_home$=esc$+"H"
  vt52_cupr$=esc$+"I"
  vt52_clrpge$=ec$+"J"
  vt52_clrrow$=esc$+"K"
  vt52_insrow$=esc$+"L"
  vt52_delrow$=esc$+"M"
  ' ** Cursor to supply row,col
  vt52_cto$=esc$+"Y,"
  ' ** Foreground color supply color (1-15)
  vt52_fcolor$=esc$+"b"
  ' ** Background color supply color (1-15)
  vt52_clrspage$=esc$+"d"
  vt52_showm$=esc$+"e"
  vt52_hidem$=esc$+"f"
  vt52_savem$=esc$+"j"
  vt52_restm$=esc$+"k"
  vt52_clrrow$=esc$+"l"
  vt52_crowto$=esc$+"o"
  vt52_invert$=esc$+"p"
  vt52_normal$=esc$+"q"
  vt52_nrowatend$=esc$+"v"
  vt52_srowatend$=esc$+"w"
  vt52_bcolor$=esc$+"c,"
RETURN
PROCEDURE vt52_test
  CLS
  LOCAL vt52text$,vt52init$
  vt52init$=vt52_cls$+vt52_invert$+vt52_showm$+vt52_fcolor$+"3"
  vt52text$=vt52text$+" Test of VT52 for use with "+vt52_fcolor$+CHR$(3)+"Fujinet      "
  PRINT vt52_init$
  LOCAL i%,t%,r%
  PRINT vt52_invert$;
  FOR r%=1 TO 15
    ' set color
    PRINT vt52_fcolor$+CHR$(r%);
    FOR i%=1 TO 40
      PRINT " ";
    NEXT i%
    FOR t%=0 TO 3
      VSYNC
    NEXT t%
  NEXT r%
  FOR i%=1 TO LEN(vt52text$)
    PRINT MID$(vt52text$,i%,1);
    FOR t%=0 TO 3
      VSYNC
    NEXT t%
  NEXT i%
  PRINT vt52_invert$;
  FOR r%=1 TO 15
    ' set color
    PRINT vt52_fcolor$+CHR$(r%);
    FOR i%=1 TO 40
      PRINT " ";
    NEXT i%
    FOR t%=0 TO 3
      VSYNC
    NEXT t%
  NEXT r%
RETURN
PROCEDURE draw_menu
  PRINT vt52_cls$;
RETURN
